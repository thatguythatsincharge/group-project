<% include ./partials/header %>
	
	<div class="container">
		<div class="row">
			<h2 class="col-md-12">Submit A New Entry</h2>
		</div>


		<form action="/NodeMon" method="post">
			<div class="form-group row">
				<label class="col-sm-2 col-form-label" for="url">URL</label>

				<div class="col-sm-10">
					<input class="form-control" name="URL" placeholder="URL" required="" type="link">
				</div>
			</div>


			<div class="form-group row">
				<label class="col-sm-2 col-form-label" for="title">Title</label>

				<div class="col-sm-10">
					<input class="form-control" name="Title" placeholder="Title" required="" type="text">
				</div>
			</div>


			<div class="form-group row">
				<label class="col-sm-2 col-form-label" for="Description">Description</label>

				<div class="col-sm-10">
					<textarea class="form-control" name="Description" placeholder="Description (optonal)"></textarea>
				</div>
			</div>


			<fieldset class="form-group">
				<div class="row">
					<legend class="col-form-label col-md-2 pt-0">Topic</legend>

					<div class="col-md-2">
						<div class="form-check">
							<input checked class="form-check-input" id="nodeJs" name="Category" type="radio" value="node"> <label class="form-check-label" for="nodeJs">NodeJS</label>
						</div>


						<div class="form-check">
							<input class="form-check-input" id="express" name="Category" type="radio" value="express"> <label class="form-check-label" for="express">Express</label>
						</div>


						<div class="form-check">
							<input class="form-check-input" id="ejs" name="Category" type="radio" value="ejs"> <label class="form-check-label" for="ejs">EJS</label>
						</div>
					</div>
					<legend class="col-form-label col-md-2 offset-md-4 pt-0">Type</legend>

					<div class="col-md-2">
						<div class="form-check">
							<input checked class="form-check-input" id="video" name="Type" type="radio" value="video"> <label class="form-check-label" for="video">Video</label>
						</div>


						<div class="form-check">
							<input class="form-check-input" id="article" name="Type" type="radio" value="article"> <label class="form-check-label" for="article">Article</label>
						</div>


						<div class="form-check">
							<input class="form-check-input" id="other" name="Type" type="radio" value="other"> <label class="form-check-label" for="other">Other</label>
						</div>
					</div>
				</div>
			</fieldset>


			<div class="form-group row">
				<div class="col-md-12">
					<button class="btn btn-primary" type="submit">Submit</button>
				</div>
			</div>

		</form>
	</div>

<%include ./partials/footer %>
